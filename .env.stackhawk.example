# StackHawk Environment Variables
# Copy this file to .env and fill in your values

# StackHawk API Key (Required)
# Get from: https://app.stackhawk.com/settings/apikeys
HAWK_API_KEY=hawk.xxxxxxxxxxxxxxxx.xxxxxxxxxxxxxxxx

# Backend Application ID (Required)
# Get from: https://app.stackhawk.com/applications
HAWK_APP_ID=7757fbff-3cb0-4cb1-8a9c-e6cf896ecffc

# Frontend Application ID (Required)
# Get from: https://app.stackhawk.com/applications
HAWK_FRONTEND_APP_ID=2038be8b-5252-4763-9d17-36f9da0cb9ba

# Environment (Optional, default: Development)
HAWK_ENV=Development

# Backend Host (Optional, default: http://localhost:8000)
APP_HOST=http://localhost:8000

# Frontend Host (Optional, default: http://localhost:3000)
FRONTEND_HOST=http://localhost:3000

# Production Host (for production scans)
PRODUCTION_HOST=https://gaia-backend.herokuapp.com

# Failure Threshold (Optional, default: medium)
# Options: high, medium, low
FAILURE_THRESHOLD=medium

# Git Info (auto-populated in CI/CD)
GIT_BRANCH=main
GIT_COMMIT_SHA=HEAD

# Supabase Auth Token (Optional, for authenticated scans)
# Get from browser DevTools -> Application -> Cookies -> sb-access-token
SUPABASE_AUTH_TOKEN=

# Notes:
# - Never commit this file with real values
# - Use .env for local development only
# - GitHub Actions uses repository secrets
